@using ControleDeCadastroDeLivros.Enums
@model UsuarioModel

@{

    ViewData["Title"] = "Editar usuário";
}

<div class="text-center">

    <h1 class="display-4">Editar usuário</h1>

</div>

<form asp-controller="Usuario" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="titulo">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do usuário">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="escritor">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email do usuário">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="descricao">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login do usuário">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        <label for="descricao">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="">Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>  <!--Enum não está sendo chamado-->
            <option value="@PerfilEnum.Padrao">Padrao</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>
    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a class="btn badge-secondary btn-block" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>

