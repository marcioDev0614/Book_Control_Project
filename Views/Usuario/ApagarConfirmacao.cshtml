@model UsuarioModel

@{
    ViewData["Title"] = "Confirmação de apagar o usuário";
}

<div class="text-center">
    <h3>Realmente você deseja apagar o usuário (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Usuario" asp-action="Index" role="button">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>